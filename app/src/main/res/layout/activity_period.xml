<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/period_shape_background"
    android:orientation="vertical"
    android:weightSum="3"
    >

    <include layout="@layout/all_view_toolbar"/>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/period_tracker"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/dp32"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_hello"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginRight="@dimen/dp24"
                android:layout_marginBottom="@dimen/sp12"
                android:textColor="@android:color/white"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginRight="@dimen/dp24"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackground"
                android:text="@string/content_header"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
<Button
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:text="Text"
    android:background="@drawable/button_selector_next"
    />

</LinearLayout>