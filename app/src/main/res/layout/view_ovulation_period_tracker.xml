<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/period_tracker_shape_circle">
   <TextView
       android:id="@+id/tv_day"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:text="10 Days"
       android:textSize="60sp"
       android:textStyle="bold"
       android:textColor="@android:color/white"

       />
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
app:layout_constraintBottom_toTopOf="@id/tv_day"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginTop="@dimen/dp36"
       android:text="Ovulation In"
       android:textSize="32sp"
       android:textColor="@android:color/white"

       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/tv_day"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:text="Low chance of getting pregnant"
       android:textSize="@dimen/sp24"
       android:textColor="@android:color/white"
android:layout_marginBottom="@dimen/dp32"
       android:paddingLeft="@dimen/dp44"
       android:paddingRight="@dimen/dp44"
       android:gravity="center"
       />

</android.support.constraint.ConstraintLayout>