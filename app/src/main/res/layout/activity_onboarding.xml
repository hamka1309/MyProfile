<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_oke"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/period_shape_background"
    android:visibility="visible"
    tools:visibility="visible">

   <TextView
       android:id="@+id/tv_period_tracker"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/period_tracker"
       android:textColor="@android:color/white"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="@dimen/dp24"
       android:gravity="center"
       android:textSize="@dimen/dp32"
       />
   <TextView
       android:id="@+id/tv_hello"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tv_period_tracker"
       android:layout_marginLeft="@dimen/dp24"
       android:text="@string/content_hello"
       android:textColor="@android:color/white"
       android:layout_marginTop="@dimen/dp44"
       />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/tv_hello"
      android:id="@+id/lv_content"
      >
     <TextView
         android:id="@+id/tv_content"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintTop_toBottomOf="@id/tv_hello"
         android:layout_marginLeft="@dimen/dp24"
         android:layout_marginTop="@dimen/dp16"
         android:layout_marginRight="@dimen/dp24"
         android:textColor="@android:color/white"
         android:background="?attr/selectableItemBackground"
         android:text="@string/content_header"
         />

  </LinearLayout>



</android.support.constraint.ConstraintLayout>


